{
  "name": "web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "NODE_ENV=development webpack-dev-server --config ./webpack/webpack.dev.js",
    "build": "webpack --mode production --config ./webpack/webpack.prod.js",
    "deploy": "firebase deploy"
  },
  "dependencies": {
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/lab": "^4.0.0-alpha.56",
    "@material-ui/styles": "^4.10.0",
    "@reach/router": "^1.3.4",
    "@reduxjs/toolkit": "^1.4.0",
    "core-js": "^3.6.5",
    "firebase": "^7.16.0",
    "immer": "^7.0.7",
    "immutable": "^4.0.0-rc.12",
    "markdown-it": "^11.0.0",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-h5-audio-player": "^3.2.0",
    "react-helmet": "^6.1.0",
    "react-icons": "^3.10.0",
    "react-is": "^16.13.1",
    "react-loadable": "^5.5.0",
    "react-markdown": "^4.3.1",
    "react-markdown-editor-lite": "^1.2.1",
    "react-redux": "^7.2.1",
    "react-redux-firebase": "^3.7.0",
    "react-share": "^4.2.1",
    "react-toastify": "^6.0.8",
    "recoil": "^0.0.10",
    "redux": "^4.0.5",
    "redux-firestore": "^0.13.0",
    "redux-thunk": "^2.3.0",
    "rich-markdown-editor": "^10.4.0-1",
    "use-immer": "^0.4.1"
  },
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "@hot-loader/react-dom": "^16.13.0",
    "@testing-library/jest-dom": "^5.11.1",
    "@testing-library/react": "^10.4.7",
    "@testing-library/react-hooks": "^3.3.0",
    "@testing-library/user-event": "^7.1.2",
    "autoprefixer": "^9.8.5",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.1.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-import": "^1.13.0",
    "case-sensitive-paths-webpack-plugin": "^2.3.0",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^3.6.0",
    "eslint": "^7.4.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-webpack": "^0.12.2",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.8",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^4.3.0",
    "image-webpack-loader": "^6.0.0",
    "jest": "^26.1.0",
    "mini-css-extract-plugin": "^0.9.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "postcss": "^7.0.32",
    "postcss-loader": "^3.0.0",
    "prettier": "^2.0.5",
    "react-hot-loader": "^4.12.21",
    "react-test-renderer": "^16.13.1",
    "robotstxt-webpack-plugin": "^7.0.0",
    "terser-webpack-plugin": "^3.0.6",
    "webpack": "^4.43.0",
    "webpack-atomizer-loader": "^1.0.2",
    "webpack-bundle-analyzer": "^3.8.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-manifest-plugin": "^2.2.0",
    "webpack-merge": "^5.0.9",
    "webpack-pwa-manifest": "^4.2.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "prettier": {
    "semi": false,
    "tabWidth": 2,
    "printWidth": 79,
    "useTabs": false,
    "endOfLine": "lf",
    "singleQuote": true,
    "arrowParens": "avoid",
    "trailingComma": "es5",
    "bracketSpacing": true,
    "jsxSingleQuote": false,
    "jsxBracketSameLine": false
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "browser": true,
      "jest": true,
      "es6": true
    },
    "extends": [
      "airbnb",
      "plugin:jsx-a11y/recommended",
      "prettier",
      "prettier/react"
    ],
    "plugins": [
      "jsx-a11y",
      "react-hooks",
      "prettier"
    ],
    "rules": {
      "no-param-reassign": 0,
      "consistent-return": 0,
      "react/jsx-filename-extension": 0,
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn",
      "import/no-named-as-default": 0,
      "react/jsx-props-no-spreading": 0,
      "import/prefer-default-export": 0,
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true
        }
      ]
    },
    "globals": {
      "document": false
    },
    "settings": {
      "import/resolver": {
        "webpack": {
          "config": "webpack/webpack.common.js"
        }
      }
    },
    "ignorePatterns": [
      "dist/",
      "webpack.*.js"
    ]
  }
}
