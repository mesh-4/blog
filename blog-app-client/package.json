{
  "name": "blog-app-client",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "concurrently \"npm run watch:css\" \"PORT=3500 react-app-rewired start\"",
    "build": "yarn build:css && PUBLIC_URL=https://senlima.blog react-app-rewired build",
    "test": "react-app-rewired test",
    "eject": "react-scripts eject",
    "watch:css": "postcss src/css/source.css -o src/css/main.css -w",
    "build:css": "postcss src/css/source.css -o src/css/main.css --env production"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "prettier",
      "prettier/react"
    ],
    "plugins": [
      "prettier"
    ]
  },
  "prettier": {
    "semi": false,
    "tabWidth": 2,
    "printWidth": 78,
    "useTabs": false,
    "endOfLine": "lf",
    "singleQuote": true,
    "arrowParens": "avoid",
    "trailingComma": "es5",
    "bracketSpacing": true,
    "jsxSingleQuote": false,
    "jsxBracketSameLine": false
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|ico|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/mocks/fileMock.js"
    }
  },
  "dependencies": {
    "@reach/router": "^1.3.4",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/jest": "^24.0.0",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-helmet": "^6.1.0",
    "react-scripts": "3.4.3",
    "typescript": "~3.7.2"
  },
  "devDependencies": {
    "@types/reach__router": "^1.3.5",
    "@types/react-helmet": "^6.1.0",
    "autoprefixer": "^9.8.6",
    "customize-cra": "^1.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "postcss-cli": "^7.1.1",
    "prettier": "^2.0.5",
    "react-app-rewired": "^2.1.6",
    "tailwindcss": "^1.7.0"
  }
}
